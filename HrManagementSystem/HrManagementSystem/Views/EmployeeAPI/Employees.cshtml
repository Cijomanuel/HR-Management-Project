                    <span aria-hidden="true"><i class="fa fa-close"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <p id="myModalContent"></p>
            </div>

        </div>
    </div>

</div>

<!-- Second modal box for adding new employee -->
