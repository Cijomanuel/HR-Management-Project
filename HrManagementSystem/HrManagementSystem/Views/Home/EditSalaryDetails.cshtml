@model HRApplicationAPI.Model.SalaryDTO

@{
    ViewData["Title"] = "Edit Salary Page";
    Layout = "_ModalLayout";
}



<div class="col-md-12 border-right">
    <form asp-action="Edit" asp-controller="SalaryAPI">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="p-2">
            <div class="col-md-12">
                <label asp-for="SalaryId" class="labels">Salary Id</label>
                <input asp-for="SalaryId" type="text" class="form-control" readonly>
                <span asp-validation-for="SalaryId" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="EmployeeId" class="labels">Employee ID</label>
                <input asp-for="EmployeeId" type="text" class="form-control" readonly >
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="InsuranceAmount" class="labels">Insurance Amount</label>
                <input asp-for="InsuranceAmount" type="text" class="form-control" >
                <span asp-validation-for="InsuranceAmount" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="TaxableAmount" class="labels">Taxable Amount</label>
                <input asp-for="TaxableAmount" type="text" class="form-control" >
                <span asp-validation-for="TaxableAmount" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="InHandSalary" class="labels">In-Hand Salary</label>
                <input asp-for="InHandSalary" type="text" class="form-control" >
                <span asp-validation-for="InHandSalary" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="AnnualSalary" class="labels">Annual Salary</label>
                <input asp-for="AnnualSalary" type="text" class="form-control" >
                <span asp-validation-for="AnnualSalary" class="text-danger"></span>
            </div>
        </div>

        <div class="row" style="display:flex;flex-direction:column;justify-content:end">
            <div class="mt-5 text-right">
                <button class="btn btn-primary profile-button" type="submit" style="background-color: #333;margin-right:3vw">Submit</button>
                <button class="btn btn-danger profile-button" type="button">Cancel</button>
            </div>
        </div>
    </form>
</div>

<!-- Start Section: Js Scripts Start -->
@section scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />

    }

    <!-- End Section: Js Scripts  End-->
