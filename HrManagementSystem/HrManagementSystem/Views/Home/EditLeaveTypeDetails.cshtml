@model HRApplicationAPI.Model.LeaveTypeDTO

@{
    ViewData["Title"] = "Edit Leave Type Page";
    Layout = "_ModalLayout";
}



<div class="col-md-12 border-right">
    <form asp-action="Edit" asp-controller="LeaveTypeAPI">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="p-2">
            <div class="col-md-12">
                <label asp-for="LeaveTypeId" class="labels">Leave Id</label>
                <input asp-for="LeaveTypeId" type="text" class="form-control" readonly>
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="LeaveName" class="labels">Leave Name</label>
                <input asp-for="LeaveName" type="text" class="form-control"  >
                <span asp-validation-for="LeaveName" class="text-danger"></span>
            </div>
        </div>

        <div class="row" style="display:flex;flex-direction:column;justify-content:end">
            <div class="mt-5 text-right">
                <button class="btn btn-primary profile-button" type="submit" style="background-color: #333;margin-right:3vw">Submit</button>
                <button class="btn btn-danger profile-button" type="button">Cancel</button>
            </div>
        </div>
    </form>
</div>

