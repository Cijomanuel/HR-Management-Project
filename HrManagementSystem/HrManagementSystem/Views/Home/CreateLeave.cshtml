@model HRApplicationAPI.Model.LeaveDTO

@{
    ViewData["Title"] = "Create Leave Page";
    Layout = "_ModalLayout";
}


<div class="col-md-12 border-right">
    <form asp-action="Create" asp-controller="LeaveAPI">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="p-2">
            <div class="col-md-12">
                <label asp-for="LeaveType" class="labels">Leave Type</label>
                <input asp-for="LeaveType" type="text" class="form-control" placeholder="enter leave type">
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="EmployeeId" class="labels">EmployeeId</label>
                <input asp-for="EmployeeId" type="text" class="form-control" placeholder="enter employee id">
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="StartDate" class="labels">Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" >
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="EndDate" class="labels">Start Date</label>
                <input asp-for="EndDate" type="date" class="form-control" >
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="row" style="display:flex;flex-direction:column;justify-content:end">
            <div class="mt-5 text-right">
                <button class="btn btn-primary profile-button" type="submit" style="background-color: #333;margin-right:3vw">Submit</button>
                <button class="btn btn-danger profile-button" type="button">Cancel</button>
            </div>
        </div>
    </form>
</div>

<!-- Start Section: Js Scripts Start -->
@section scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />

    }

    <!-- End Section: Js Scripts  End-->
