@model HRApplicationAPI.Model.LeaveRecordDTO

@{
    ViewData["Title"] = "Edit Leave Page";
    Layout = "_ModalLayout";
}



<div class="col-md-12 border-right">
    <form asp-action="Edit" asp-controller="LeaveRecorAPI">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="p-2">
            <div class="col-md-12">
                <label asp-for="LeaveRecordId" class="labels">LeaveRecord Id</label>
                <input asp-for="LeaveRecordId" type="text" class="form-control" readonly>
                <span asp-validation-for="LeaveRecordId" class="text-danger"></span>
            </div>
        </div>
        <div class="p-2">
            <div class="col-md-12">
                <label asp-for="EmployeeId" class="labels">Employee Id</label>
                <input asp-for="EmployeeId" type="text" class="form-control" readonly>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
        </div>
        <div class="p-2">
            <div class="col-md-12">
                <label asp-for="LeaveTypeId" class="labels">LeaveType Id</label>
                <input asp-for="LeaveTypeId" type="text" class="form-control" readonly>
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
        </div>
         <div class="p-2">
            <div class="col-md-12">
                <label asp-for="RemainingDays" class="labels">Remaining Days</label>
                <input asp-for="RemainingDays" type="text" class="form-control" readonly>
                <span asp-validation-for="RemainingDays" class="text-danger"></span>
            </div>
        </div>
        <div class="p-2">
            <div class="col-md-12">
                <label asp-for="TotalLeaves" class="labels">Total Leaves</label>
                <input asp-for="TotalLeaves" type="text" class="form-control" readonly>
                <span asp-validation-for="TotalLeaves" class="text-danger"></span>
            </div>
        </div>

        <div class="row" style="display:flex;flex-direction:column;justify-content:end">
            <div class="mt-5 text-right">
                <button class="btn btn-primary profile-button" type="submit" style="background-color: #333;margin-right:3vw">Submit</button>
                <button class="btn btn-danger profile-button" type="button">Cancel</button>
            </div>
        </div>
    </form>
</div>

<!-- Start Section: Js Scripts Start -->
@section scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />

    }

    <!-- End Section: Js Scripts  End-->
